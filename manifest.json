{
    "name": "The Truth Is Out There",
    "version": "0.9.0",
    "description": "An experimental browser extension for a community against fake news",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": [
        "declarativeContent",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "index.html#/pageAction",
        "default_icon": {
            "16": "assets/ext-icon-16.png",
            "32": "assets/ext-icon-32.png",
            "48": "assets/ext-icon-48.png",
            "128": "assets/ext-icon-128.png"
        }
    },
    "manifest_version": 2
}